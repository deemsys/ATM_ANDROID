<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/newuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signup"
        android:layout_centerHorizontal="true"
        android:text="@string/newuser"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/signin"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_above="@+id/newuser"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonback"
        android:minHeight="2dp"
        android:text="@string/signin"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/signup"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="20dip"
        android:layout_above="@+id/forget"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:background="@drawable/buttonback"
        android:text="@string/signup"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/forget"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:background="@drawable/buttonback"
        android:text="@string/forget"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="70dip"
        android:layout_height="20dip"
        android:layout_above="@+id/signin"
        android:layout_alignLeft="@+id/uname"
        android:layout_marginBottom="49dp"
        android:text="@string/pass"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/pass"
        android:layout_alignLeft="@+id/mobnum"
        android:background="@drawable/edittext"
        android:ems="10"
        android:inputType="textPassword" >

     
    </EditText>

    <TextView
        android:id="@+id/uname"
        android:layout_width="75dip"
        android:layout_height="20dip"
        android:layout_above="@+id/pass"
        android:layout_toLeftOf="@+id/mobnum"
        android:text="@string/username"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/mobnum"
        android:layout_width="90dip"
        android:layout_height="18dip"
        android:layout_alignBaseline="@+id/uname"
        android:layout_alignBottom="@+id/uname"
        android:layout_alignRight="@+id/forget"
        android:background="@drawable/edittext"
        android:ems="10"
        android:inputType="text" >   <requestFocus />
        </EditText>

</RelativeLayout>