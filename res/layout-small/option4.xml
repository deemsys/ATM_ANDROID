<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrou"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/audiooptions"
        android:layout_width="90sp"
        android:layout_height="20sp"
        android:layout_below="@+id/voice"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/voice" />

    <TextView
        android:id="@+id/othr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:text="@string/other"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/sometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/othr"
        android:layout_marginTop="29dp"
        android:text="@string/sometext"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/stop"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_alignBaseline="@+id/start"
        android:layout_alignBottom="@+id/start"
        android:layout_centerHorizontal="true"
        android:background="@drawable/stop_button"
        android:onClick="stopClicked"
        android:text="@string/stop"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/start"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_alignBaseline="@+id/play"
        android:layout_alignBottom="@+id/play"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp"
        android:background="@drawable/record"
        android:onClick="recordAudio"
        android:text="@string/start"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/play"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_below="@+id/audiooptions"
        android:layout_marginTop="29dp"
        android:layout_toRightOf="@+id/audiooptions"
        android:background="@drawable/xxpl"
        android:onClick="playAudio"
        android:text="@string/play"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/reason"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/voice"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext"
        android:ems="10"
        android:gravity="top"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/butnext"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_alignLeft="@+id/stop"
        android:layout_below="@+id/stop"
        android:layout_marginTop="28dp"
        android:background="@drawable/buttonback"
        android:text="@string/next2"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/rec"
        android:textColor="#ffffff" />

</RelativeLayout>