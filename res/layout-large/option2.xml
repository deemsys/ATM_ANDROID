<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrou"
    android:orientation="vertical" >

    <Button
        android1:id="@+id/next"
        style="?android:attr/buttonStyleSmall"
        android1:layout_width="70sp"
        android1:layout_height="40sp"
        android1:layout_below="@+id/selecty"
        android1:layout_centerHorizontal="true"
        android1:layout_marginTop="74dp"
        android1:background="@drawable/buttonback"
        android1:text="@string/next2"
        android1:textColor="#ffffff" />

    <TextView
        android1:id="@+id/sideeff"
        android1:layout_width="250sp"
        android1:layout_height="wrap_content"
        android1:layout_alignParentTop="true"
        android1:layout_centerHorizontal="true"
        android1:layout_marginTop="64dp"
        android1:gravity="center_vertical"
        android1:textAppearance="?android:attr/textAppearanceLarge"
        android1:textColor="#ffffff"
        android1:textSize="17dp" />

    <RadioGroup
        android1:id="@+id/selecty"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/next"
        android1:layout_centerVertical="true" >

        <RadioButton
            android1:id="@+id/yesans"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:button="@drawable/custom_radiobutton"
            android1:text="@string/yes"
            android1:textColor="#ffffff"
            android1:textSize="17dp" />

        <RadioButton
            android1:id="@+id/noans"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:button="@drawable/custom_radiobutton"
            android1:text="@string/no"
            android1:textColor="#ffffff"
            android1:textSize="17dp" />
    </RadioGroup>

</RelativeLayout>