<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrou"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/msgbody"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:text="@string/fromm"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/msgbody"
        android:layout_width="260sp"
        android:layout_height="220sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/edittext"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="30dp"
        android:text="@string/too"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/frommy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="29dp"
        android:layout_toRightOf="@+id/textView1"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/toooy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/frommy"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/dttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/toooy"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/msgbody"
        android:layout_below="@+id/msgbody"
        android:layout_marginTop="32dp"
        android:text="@string/dt"
        android:textColor="#ffffff" />

</RelativeLayout>
