<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="@dimen/chumma"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <TextView
        android:id="@+id/uname"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mobnum"
        android:layout_toLeftOf="@+id/mobnum"
        android:text="@string/username"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobnum"
        android:layout_toLeftOf="@+id/password"
        android:text="@string/pass"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/mobnum"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_above="@+id/password"
        android:layout_marginBottom="29dp"
        android:layout_toRightOf="@+id/pass"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="@string/userhint"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/password"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_above="@+id/signin"
        android:layout_alignRight="@+id/forget"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="@string/passhint"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/newuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signup"
        android:layout_centerHorizontal="true"
        android:text="@string/newuser"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/forget"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="160sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:background="@drawable/custom_button"
        android:text="@string/forget"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/signup"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:layout_above="@+id/forget"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_button"
        android:text="@string/signup"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/signin"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60sp"
        android:layout_height="50sp"
        android:layout_above="@+id/newuser"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:minHeight="2dp"
        android:text="@string/signin"
        android:textColor="#ffffff" />

</RelativeLayout>